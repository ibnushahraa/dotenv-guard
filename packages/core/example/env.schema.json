{
  "APP_NAME": {
    "required": true,
    "regex": "^[a-zA-Z0-9_-]+$"
  },
  "DB_HOST": {
    "required": true,
    "regex": "^[a-zA-Z0-9_.-]+$"
  },
  "DB_PORT": {
    "required": true,
    "regex": "^[0-9]+$"
  },
  "NODE_ENV": {
    "required": true,
    "enum": ["development", "production", "test"]
  },
  "API_URL": {
    "required": false,
    "regex": "^https?://.+"
  }
}
